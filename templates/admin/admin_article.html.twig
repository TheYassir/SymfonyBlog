{% extends "base.admin.html.twig" %}

{% block title %}
    Article
{% endblock %}

{% block body %}
    <h1 class="text-center mt-3">Les Articles</h1>
    <div class="text-center my3">
        <a href="{{ path('app_admin_article_add') }}" class="btn btn-outline-danger col-3">Nouvelle Article</a>
    </div>
    <div class="container">
        <table class="table table-striped mx-2 mb-5">

            <thead>
                <tr class="entete-comments">
                    {% for value in colonnes %}
                        {% if value == "date_created" %}
                            <th class="text-center">Date de Création</th>
                        {% else %}
                            <th class="text-center">{{value|capitalize}}</th>
                        {% endif %}
                    {% endfor %}
                    <th class="text-center">Action</th>
                </tr> 
            </thead>

            <tbody>
                {% for data in cellules %}           
                    <tr>
                        <td class="text-center"> {{ data.id }} </td>
                        <td class="text-center">{{ data.title|slice(0, 25)|striptags|capitalize }}[...]</td>
                        <td class="text-center">{{ data.content|slice(0, 25)|striptags }}[...]</td>
                        <td class="text-center"><img src="{{ asset('uploads/photos/' ~ data.cover) }}" alt="" style="height: 15vh;"></td>

                        <td class="text-center">le {{ data.dateCreated|date('d/m/Y à H:i') }}</td>
                        <td class="text-center"> {{ data.slug }} </td>

                        <td>
                            <div class="text-center d-flex justify-content-center">
                                <a href="{{ path('app_admin_article_update', {'id': data.id}) }}" class="btn btn-success text-white"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16"><path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/><path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/></svg></a>
                                <a href="{{ path('app_admin_article_delete', {'id': data.id}) }}" class="btn btn-danger text-white ms-1" onclick="return(confirm('Etes-vous sur de vouloir supprimer cette utilisateur ?' ))"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/><path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/></svg></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}     
            </tbody>   

        </table>
    </div>



{% endblock %}