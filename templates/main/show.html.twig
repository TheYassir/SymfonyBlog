{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container col-8 mx-auto">
        <form class="my-3">
            <input type="button" class="btn btn-orange" value="Retour" onclick="history.go(-1)">
        </form>    

        <div class="card mb-5">
            <img src="{{ asset('uploads/photos/' ~ article.cover) }}" class="card-img-top"  alt="{{article.title}}">
            <div class="card-body">
                <h3 class="my-4 text-center textOrange">{{ article.title }}</h3>
                <p>{{article.content}} </p>
            </div>
            <div class="card-footer text-muted">
                Publié le {{article.dateCreated|date(" d/m/Y à H:i")}}
            </div>
        </div>
    </div>
    



{% endblock %}
